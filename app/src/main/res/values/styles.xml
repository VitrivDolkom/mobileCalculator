<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalculatorButtonStyle">
        <item name="android:background">@drawable/round_corners</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">32sp</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="CalculatorButtonStyle.Accent">
        <item name="android:background">@drawable/round_corners_red</item>
    </style>

    <style name="CalculatorButtonStyle.WithMarginRight">
        <item name="android:layout_marginRight">16dp</item>
    </style>
</resources>