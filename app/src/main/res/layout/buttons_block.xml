<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="button_ac,button_plus_minus,button_percent,button_divide,button_seven,button_eight,button_nine,button_multiplication,button_four,button_five,button_six,button_minus,button_one,button_two,button_three,button_plus,button_zero,button_comma,button_equal"
        app:flow_horizontalGap="4dp"
        app:flow_verticalGap="4dp"
        app:flow_wrapMode="chain"
        app:flow_maxElementsWrap="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_ac"
        style="@style/CalculatorButtonStyle"
        android:text="@string/ac"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_percent="0.15" />


    <Button
        android:id="@+id/button_plus_minus"
        style="@style/CalculatorButtonStyle"
        android:text="@string/plus_minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_percent="0.15"/>

    <Button
        android:id="@+id/button_percent"
        style="@style/CalculatorButtonStyle"
        android:text="@string/percent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.22"
        android:maxWidth="100dp"
        app:layout_constraintHeight_percent="0.15"/>

    <Button
        android:id="@+id/button_divide"
        style="@style/CalculatorButtonStyle.Red"
        android:text="@string/divide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintHeight_percent="0.15"/>

    <Button
        android:id="@+id/button_seven"
        style="@style/CalculatorButtonStyle"
